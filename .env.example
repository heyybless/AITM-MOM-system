# AITM MOM Environment Configuration
# Copy this to .env and update with your actual values

# MongoDB Configuration
# For Local Development:
# MONGODB_URI=mongodb://localhost:27017/aitm-mom

# For Production (MongoDB Atlas Cloud - Recommended):
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/aitm-mom?retryWrites=true&w=majority

# Server Configuration
PORT=3000

# JWT Secret for Authentication (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random_for_production

# Email Configuration (Gmail - for meeting notifications)
EMAIL_USER=your_gmail_address@gmail.com
EMAIL_PASS=your_16_character_gmail_app_password

# Production Settings
NODE_ENV=production
